<div class="card">
  <a href="/home/post/{{id}}">
    <div class="card-header">
      <h3>{{title}}</h3>
      <p class="card-text"> Posted by {{user.username}} on {{format_date date_created}} </p>
    </div>
    <div class="card-body">
      <p class="card-text"> {{text}} </p>
    </div>
  </a>
</div>