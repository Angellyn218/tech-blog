<section class="post">
  <div class="card">
    <div class="card-header">
      <h3>{{title}}</h3>
      <p class="card-text"> Posted by {{user.username}} on {{format_date date_created}} </p>
    </div>
    <div class="card-body">
      <p class="card-text"> {{text}} </p>
    </div>
  </div>
  <div class="comments">
    {{#each comments as |comment|}}
    {{> comment-details}}
    {{/each}}
  </div>
</section>