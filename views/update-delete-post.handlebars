<form class="m-4">
  <div class="form-group">
    <label for="title">Post Title</label>
    <textarea class="form-control" id="title" row="1" placeholder="Enter title">{{title}}</textarea>
  </div>
  <div class="form-group">
    <label for="text">Post Text</label>
    <textarea class="form-control" id="text" rows="8" placeholder="Enter text">{{text}}</textarea>
  </div>
  <button id="update-post" type="submit" class="btn btn-primary">Update post</button>
  <button id="delete-post" type="submit" class="btn btn-primary">Delete post</button>
</form>