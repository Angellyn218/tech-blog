<form id="create-post" class="m-4">
  <div class="form-group">
    <label for="create-title">Post Title</label>
    <input type="input" class="form-control" id="create-title" placeholder="Enter Title">
  </div>
  <div class="form-group">
    <label for="create-text">Post Text</label>
    <textarea class="form-control" id="create-text" rows="8" placeholder="Enter Text"></textarea>
  </div>
  <button id="create-btn" type="submit" class="btn btn-primary">Create post</button>
</form>

<script src="/js/create-post.js"></script>