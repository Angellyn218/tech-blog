<form class="m-4">
  <div class="form-group">
    <label for="title">Post Title</label>
    <input type="input" class="form-control" id="title" placeholder="Enter Title">
  </div>
  <div class="form-group">
    <label for="text">Post Text</label>
    <textarea class="form-control" id="text" rows="8" placeholder="Enter Text"></textarea>
  </div>
  <button id="create-post" type="submit" class="btn btn-primary">Create post</button>
</form>