{{#each posts as |post|}}
<div class="card">
  <a href="/posts/{{id}}">
    <div class="card-header">
      {{title}}
      <p class="card-text"> Posted on {{format_date date_created}} </p>
    </div>
    <div class="card-body">
      <p class="card-text"> {{text}} </p>
    </div>
  </a>
</div>
{{/each}}
<button id="create-btn" type="button" class="btn btn-dark m-4">+ Post</button>


<script src="./js/dashboard.js"></script>